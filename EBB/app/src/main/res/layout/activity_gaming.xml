<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gaming">

    <ImageView
        android:id="@+id/imageCan"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/can"
        app:layout_constraintEnd_toStartOf="@id/imagePlastic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagePlastic"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/plastic"
        app:layout_constraintEnd_toStartOf="@id/imagePaper"
        app:layout_constraintStart_toEndOf="@id/imageCan"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagePaper"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/paper"
        app:layout_constraintEnd_toStartOf="@id/imageNormal"
        app:layout_constraintStart_toEndOf="@id/imagePlastic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageNormal"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/wastes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imagePaper"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/imageTrash"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/tree1" />

</androidx.constraintlayout.widget.ConstraintLayout>